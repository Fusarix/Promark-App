<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="derek.promarkapp.NavigationPage"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnFilmList"
        android:layout_width="146dp"
        android:layout_height="0dp"
        android:text="Film List"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintRight_toLeftOf="@+id/btnGallery"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnTimer"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="19dp" />

    <Button
        android:id="@+id/btnTimer"
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Download Logo"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnFilmList"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnEmail"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnFilmList" />

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="149dp"
        android:layout_height="134dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Send us an Email!"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="30dp" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Residential Gallery"
        android:layout_marginEnd="37dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnFilmList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnFilmList"
        android:layout_marginRight="37dp" />

    <Button
        android:id="@+id/btnBacktoLogin"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:text="Back to Login"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp" />

    <Button
        android:id="@+id/btnFindUs"
        android:layout_width="187dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="70dp"
        android:text="Find Us!"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnBacktoLogin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTimer"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
