<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="derek.promarkapp.CL800"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imgcl800"
        android:layout_width="396dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/cl800"
        android:layout_marginEnd="21dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnBackToList"
        app:layout_constraintRight_toRightOf="@+id/txtTseTransmitted"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="21dp" />

    <TextView
        android:id="@+id/txtFilmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        android:layout_marginStart="46dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtTotalSolarEnery"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toRightOf="@+id/imgcl800"
        android:layout_marginLeft="46dp" />

    <TextView
        android:id="@+id/txtVisibleLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        android:text="Visible Light: Transmitted, Reflected (%)"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/imgcl800"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtTseTransmitted" />

    <TextView
        android:id="@+id/txtTseAbsorbed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtTseReflected"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/txtTotalSolarEnery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:text="Total Solar Energy: Transmitted, Reflected, Absorbed (%)"
        android:layout_marginEnd="15dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtTseAbsorbed"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="34dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/txtTseReflected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        app:layout_constraintRight_toLeftOf="@+id/txtTseAbsorbed"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtVisibleLight"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="23dp" />

    <TextView
        android:id="@+id/txtTseTransmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        android:layout_marginEnd="25dp"
        app:layout_constraintRight_toLeftOf="@+id/txtTseReflected"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtTseReflected"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="25dp" />

    <TextView
        android:id="@+id/txtVlReflected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        android:layout_marginStart="25dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/txtVisibleLight"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/txtVlTransmitted"
        android:layout_marginLeft="25dp" />

    <TextView
        android:id="@+id/txtVlTransmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtVlReflected"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtVisibleLight" />

    <Button
        android:id="@+id/btnBackToList"
        android:layout_width="141dp"
        android:layout_height="117dp"
        android:text="Back to Film List"
        android:background="@android:color/holo_blue_dark"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imgcl800"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="33dp"
        app:layout_constraintLeft_toLeftOf="@+id/imgcl800" />
</android.support.constraint.ConstraintLayout>