<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="derek.promarkapp.RS20Page"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imgRS20"
        android:layout_width="0dp"
        android:layout_height="193dp"
        app:srcCompat="@drawable/rs20"
        app:layout_constraintRight_toLeftOf="@+id/txtTotalSolarEnery"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtTotalSolarEnery"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="18dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtTotalSolarEnery"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="18dp" />

    <TextView
    android:id="@+id/txtFilmName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="50px"
    android:text="TextView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/imgRS20"
        app:layout_constraintLeft_toRightOf="@+id/imgRS20"
        android:layout_marginLeft="18dp" />

    <TextView
        android:id="@+id/txtVisibleLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:text="Visible Light: Transmitted, Reflected"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="34dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/imgRS20"
        android:layout_marginRight="34dp" />

    <TextView
        android:id="@+id/txtTseAbsorbed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        android:layout_marginEnd="88dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="81dp"
        app:layout_constraintRight_toRightOf="@+id/txtTotalSolarEnery"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtTseReflected"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtTseReflected"
        android:layout_marginLeft="81dp"
        android:layout_marginRight="88dp" />

    <TextView
        android:id="@+id/txtTotalSolarEnery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="Total Solar Energy: Transmitted, Reflected, Absorbed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="3dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="114dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="3dp" />

    <TextView
        android:id="@+id/txtTseReflected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        android:layout_marginEnd="138dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="140dp"
        app:layout_constraintRight_toRightOf="@+id/txtVisibleLight"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTotalSolarEnery"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/btnBackToList"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="138dp" />

    <TextView
        android:id="@+id/txtTseTransmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtTseReflected"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtTotalSolarEnery" />

    <TextView
        android:id="@+id/txtVlReflected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toRightOf="@+id/txtVlTransmitted"
        android:layout_marginLeft="21dp" />

    <TextView
        android:id="@+id/txtVlTransmitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtVlReflected"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtVisibleLight" />

    <Button
        android:id="@+id/btnBackToList"
        android:layout_width="122dp"
        android:layout_height="0dp"
        android:text="Back to Film List"
        android:background="@android:color/holo_blue_dark"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imgRS20"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/imgRS20"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/imgRS20" />
</android.support.constraint.ConstraintLayout>
