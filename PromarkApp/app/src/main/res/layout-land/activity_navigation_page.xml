<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="derek.promarkapp.NavigationPage"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnFilmList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Film List"
        android:background="@android:color/holo_blue_dark"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnGallery"
        app:layout_constraintRight_toRightOf="@+id/btnSunshadeOrder"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnSunshadeOrder"
        app:layout_constraintTop_toTopOf="@+id/btnGallery" />

    <Button
        android:id="@+id/btnSunshadeOrder"
        android:layout_width="159dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Sunshade Order Form"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="98dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnEmail"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnEmail"
        android:layout_marginLeft="98dp" />

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="159dp"
        android:layout_height="143dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Send us an Email!"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="127dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="127dp" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Residential Gallery"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnEmail"
        app:layout_constraintRight_toRightOf="@+id/btnEmail"
        android:layout_marginTop="26dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnEmail"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
